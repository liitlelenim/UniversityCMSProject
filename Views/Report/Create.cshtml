@{
    ViewData["Title"] = "Report Page";
}
<div class="container">
    <h1>Report Page: @ViewBag.PageTitle</h1>
    <form asp-action="Create" method="post">
        <input type="hidden" name="pageId" value="@ViewBag.PageId" />
        <div class="form-group mt-3">
            <label for="reporterNick">Your Nickname (optional):</label>
            <input type="text" class="form-control" id="reporterNick" name="reporterNick" placeholder="Anonymous" maxlength="50" />
        </div>
        <div class="form-group mt-3">
            <label for="text">Report Details:</label>
            <textarea class="form-control" id="text" name="text" rows="5" placeholder="Please describe the issue..." maxlength="500" required></textarea>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Submit Report</button>
            <a href="javascript:history.back()" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>