@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container">
    <h1>Admin Dashboard</h1>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Manage Pages</h5>
                    <p class="card-text">View and edit all user pages.</p>
                    <a asp-action="AllPages" class="btn btn-primary">Go to Pages</a>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Manage Reports</h5>
                    <p class="card-text">View and manage user reports.</p>
                    <a asp-controller="AdminReport" asp-action="Index" class="btn btn-warning">Go to Reports</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Manage Comments</h5>
                        <p class="card-text">View and delete user comments.</p>
                        <a asp-controller="Admin" asp-action="ManageComments" class="btn btn-info">Go to Comments</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>