@model List<Comment>
@{
    ViewData["Title"] = "Manage Comments";
}
<div class="container">
    <h1>Manage Comments</h1>
    <table class="table table-striped mt-4">
        <thead>
        <tr>
            <th>ID</th>
            <th>Page</th>
            <th>Author</th>
            <th>Comment</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var comment in Model)
        {
            <tr>
                <td>@comment.Id</td>
                <td>
                    @if (comment.Page != null)
                    {
                        <a href="/page/@comment.Page.Url" target="_blank">@comment.Page.Title</a>
                    }
                    else
                    {
                        <span class="text-muted">Page deleted</span>
                    }
                </td>
                <td>@comment.Author?.NickName (@comment.Author?.UserName)</td>
                <td>@comment.Content</td>
                <td>@comment.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    <form asp-controller="Comment" asp-action="Delete" method="post" style="display:inline">
                        <input type="hidden" name="id" value="@comment.Id" />
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this comment?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>