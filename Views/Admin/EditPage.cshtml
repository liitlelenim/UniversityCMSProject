@model UserPage
@{
    ViewData["Title"] = "Edit Page";
}

<div class="container">
    <h1>Edit Page</h1>
    
    <form asp-action="EditPage" method="post">
        <input type="hidden" asp-for="Id" />
        
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Url"></label>
            <input asp-for="Url" class="form-control" />
            <span asp-validation-for="Url" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="HtmlContent"></label>
            <textarea asp-for="HtmlContent" class="form-control" rows="10"></textarea>
            <span asp-validation-for="HtmlContent" class="text-danger"></span>
        </div>
        
        <div class="form-check">
            <input asp-for="IsPublic" class="form-check-input" />
            <label asp-for="IsPublic" class="form-check-label">Public Page</label>
        </div>
        
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="AllPages" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}