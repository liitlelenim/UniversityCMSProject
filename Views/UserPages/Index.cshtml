@model List<UniversityCMSProject.Models.UserPage>

@{
    ViewData["Title"] = "My Pages";
}

<h2>My Pages</h2>

<a asp-action="Create" class="btn btn-primary">New Page</a>

@if (Model.Count == 0)
{
    <p class="mt-3">No pages.</p>
}
else
{
    <table class="table mt-3">
        <tr>
            <th>Title</th>
            <th>URL</th>
            <th>Created</th>
            <th>Public</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td><a href="/page/@item.Url" target="_blank">/page/@item.Url</a></td>
                <td>@item.CreatedAt.ToString("dd.MM.yyyy")</td>
                <td>@(item.IsPublic ? "Yes" : "No")</td>
            </tr>
        }
    </table>
}