@model UniversityCMSProject.Models.UserPage

@{
    ViewData["Title"] = "Edit Page";
}

<h2>Edit Page</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    
    <div class="row">
        <div class="col-md-6">
            <div class="form-group mb-3">
                <label class="form-label">Title</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group mb-3">
                <label class="form-label">URL</label>
                <input asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
        </div>
    </div>
    
    <div class="mb-3">
        <label class="form-label">HTML</label>
        <textarea asp-for="HtmlContent" id="htmlEditor" class="form-control" rows="15"></textarea>
        <span asp-validation-for="HtmlContent" class="text-danger"></span>
    </div>
    
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label class="form-label">CSS</label>
                <textarea asp-for="CssContent" id="cssEditor" class="form-control" rows="10"></textarea>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label class="form-label">JavaScript</label>
                <textarea asp-for="JsContent" id="jsEditor" class="form-control" rows="10"></textarea>
            </div>
        </div>
    </div>
    
    <div class="form-check mb-3">
        <input asp-for="IsPublic" class="form-check-input" />
        <label class="form-check-label">Public page</label>
    </div>
    
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/6.65.7/codemirror.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/6.65.7/codemirror.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/6.65.7/mode/xml/xml.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/6.65.7/mode/css/css.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/6.65.7/mode/javascript/javascript.min.js"></script>

<script>
    var htmlEditor = CodeMirror.fromTextArea(document.getElementById('htmlEditor'), {
        lineNumbers: true,
        mode: 'xml'
    });
    
    var cssEditor = CodeMirror.fromTextArea(document.getElementById('cssEditor'), {
        lineNumbers: true,
        mode: 'css'
    });
    
    var jsEditor = CodeMirror.fromTextArea(document.getElementById('jsEditor'), {
        lineNumbers: true,
        mode: 'javascript'
    });
    
    document.querySelector('form').addEventListener('submit', function() {
        htmlEditor.save();
        cssEditor.save();
        jsEditor.save();
    });
</script>