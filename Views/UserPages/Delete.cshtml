@model UniversityCMSProject.Models.UserPage

@{
    ViewData["Title"] = "Delete Page";
}

<h2>Delete Page</h2>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this page?</h4>
    <p>This action cannot be undone.</p>
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">
            <strong>URL:</strong> /page/@Model.Url<br>
            <strong>Created:</strong> @Model.CreatedAt.ToString("dd.MM.yyyy")<br>
            <strong>Public:</strong> @(Model.IsPublic ? "Yes" : "No")
        </p>
        
        <div class="mt-3">
            <h6>Preview:</h6>
            <div class="border p-2 bg-light" style="height: 150px; overflow: auto;">
                @Html.Raw(Model.HtmlContent)
            </div>
        </div>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-4">
    <input type="hidden" asp-for="Id" />
    
    <div class="form-group">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>